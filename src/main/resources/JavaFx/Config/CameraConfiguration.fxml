<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jayfella.devkit.controller.config.CameraConfigurationController">
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" />
    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="ViewPort Color" />
      <ColorPicker fx:id="viewPortColorPicker" GridPane.columnIndex="1" />
      <Label text="Field of View" GridPane.rowIndex="1" />
      <Label text="Frustum Near" GridPane.rowIndex="2" />
      <Label text="Frustum Far" GridPane.rowIndex="3" />
      <TextField fx:id="fovTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="frustumNearTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="frustumFarTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
