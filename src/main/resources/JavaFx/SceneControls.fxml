<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jayfella.devkit.controller.SceneControlsController">
   <children>
      <HBox>
         <children>
            <HBox styleClass="hbox-child">
               <children>
                  <ToggleButton mnemonicParsing="false" onAction="#onDebugLightsToggleButtonAction">
                     <graphic>
                        <FontAwesomeIconView glyphName="SUN_ALT" styleClass="buttonLeft" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Toggle Debug Lights" />
                     </tooltip>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" onAction="#onDebugGridToggleButtonAction" styleClass="buttonRight">
                     <graphic>
                        <FontAwesomeIconView glyphName="TH" styleClass="buttonLeft" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Grid Settings" />
                     </tooltip>
                  </ToggleButton>

               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@css/scene-controls.css" />
      <URL value="@css/style.css" />
   </stylesheets>
</AnchorPane>
